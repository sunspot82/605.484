<fieldset>
      <legend><span class="entryLabel">Project <%=controller.action_name.upcase%></span></legend>
<% form_for(@project) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :organization_id %><br />
    <%= f.select :organization_id, Organization.find(:all).collect { |o| [o.name,o.id] } %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', projects_path %>
</fieldset>