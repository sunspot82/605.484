<% form_for(@project_assignment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :start_date %>:<br />
    <%= f.date_select :start_date %>
  </p>
  <p>
    <%= f.label :end_date %>:<br />
    <%= f.date_select :end_date %>
  </p>
  <p>
    <%= f.label :project_scope_id %>:<br />
    <%= f.select :project_scope_id, ProjectScope.find(:all).collect { |scope| [scope.name,scope.id] } %>
  </p>
  <p>
    <%= f.label :project_id %>:<br />
    <span class="nonEditableField"><%= f.label @project_assignment.project.name %></span>
  </p>
  <p>
    <%= f.label :engineer_id %>:<br />
    <span class="nonEditableField"><%= f.label @project_assignment.engineer.name %></span>
  </p>  
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @project_assignment %> |
<%= link_to 'Back', project_assignments_path %>