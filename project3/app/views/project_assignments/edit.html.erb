<h1>Editing project_assignment</h1>

<% form_for(@project_assignment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :start_date %><br />
    <%= f.date_select :start_date %>
  </p>
  <p>
    <%= f.label :end_date %><br />
    <%= f.date_select :end_date %>
  </p>
  <p>
    <%= f.label :engineer %><br />
    <%= f.text_field :engineer, :value => @project_assignment.engineer.name.to_s, :readonly => "readonly", :class => "readonlyfield" %>
  </p>
  <p>
    <%= f.label :project %><br />
    <%= f.text_field :project, :value => @project_assignment.project.name, :readonly => "readonly", :class => "readonlyfield"%>
  </p>
  <p>
    <%= f.label :project_scope_id %><br />
    <%= f.select :project_scope_id, ProjectScope.find(:all).collect { |ps| [ps.name,ps.id] } %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @project_assignment %> |
