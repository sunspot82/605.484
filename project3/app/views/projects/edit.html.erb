<h1>Editing project</h1>

<% form_for(@project) do |f| %>
  <%= f.error_messages %>
  <p>
     <%= f.label 'Tag List (Delimiter = ,)' %>:<br />
     <%= f.text_field :tag_list %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :organization_id %><br />
    <%= f.select :organization_id, Organization.find(:all).collect { |o| [o.name,o.id] } %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @project %> |
<%= link_to 'Index', projects_path %>